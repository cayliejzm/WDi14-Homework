
<h2>Edit <%= @place.name %> </h2>

<%= form_for @place, :url => '/places/#{places.id}' do |f| %>

<p>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>
</p>
<p>
  <%= f.label :nationality %>
  <%= f.text_field :nationality, :required => true %>
</p>
<p>
  <%= f.label :dob, "Year Founded" %>
  <%= f.text_field :dob, :required => true %>
</p>
<p>
  <%= f.label :climate %>
  <%= f.text_field :climate, :required => true %>
</p>
<p>
  <%= f.label :image %>
  <%= f.text_field :image, :required => true %>
</p>

<%= f.submit %>

<% end %>
